---
import Layout from '../layouts/Layout.astro';
import LandingHeader from '../components/LandingHeader.astro';
import HeroSection from '../components/HeroSection.astro';
import ModelY from '../components/ModelY.astro';
import Model3 from '../components/Model3.astro';
import ModelX from '../components/ModelX.astro';
import ModelS from '../components/ModelS.astro';
import Cybertruck from '../components/Cybertruck.astro';
import SolarPanels from '../components/SolarPanels.astro';
import SolarRoof from '../components/SolarRoof.astro';
import Powerwall from '../components/Powerwall.astro';
---

<Layout title="Tesla - Electric cars, Solar & Clean energy .">

	<LandingHeader/>

	<main class="snap-y snap-mandatory relative w-full h-screen overflow-auto overflow-x-hidden scroll-smooth">

		<div class="snap-center"><HeroSection/></div>
		<div class="snap-center"><ModelY/></div>
		<div class="snap-center"><Model3/></div>
		<div class="snap-center"><ModelX/></div>
		<div class="snap-center"><ModelS/></div>
		<div class="snap-center"><Cybertruck/></div>
		<div class="snap-center"><SolarPanels/></div>
		<div class="snap-center"><SolarRoof/></div>
		<div class="snap-center"><Powerwall/></div>

	</main>

</Layout>